<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="5dip" />
         <stroke android:width="1dip" android:color="#DCDCDC" />
	     <gradient  android:angle="-90"   android:startColor="#DCDCDC" android:endColor="#DCDCDC"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="5dip" />
         <stroke android:width="1dip" android:color="#DCDCDC" />
         <solid  android:color="#DCDCDC"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="5dip" />
         <stroke android:width="1dip" android:color="#A9A9A9" />
         <gradient  android:angle="-90"  android:startColor="#A9A9A9" android:endColor="#A9A9A9" />            
     </shape>
 </item>
</selector>
